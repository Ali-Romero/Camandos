.input
  display: flex
  align-items: center
  border-radius: 36px;
  border: 1px solid $color-dark-1
  background: #FFF;
  height: 100%
  width 100%
  position relative
  overflow: hidden
  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1

  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    border-radius: 5px
    background: linear-gradient(179deg, #FF5D5D 0%, #8C191E 100%);
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: white
    font-weight: bold
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  &__field
    width: 100%
    height: 50px
    font-size: 13px
    line-height: 16px
    padding: 0
    display: block
    outline: none
    color: $color-black
    background: none
    font-family: "Manrope-Regular"
    font-weight: 400
    padding: 0 10px 0 15px
    border: none
    +above($breakpoints.sm)
      height: 44px
      padding: 0 10px 0 20px
    +above($breakpoints.md)
      font-size: 14px
      line-height: 18px
      height: 52px
      padding: 0 10px 0 28px
    +above($breakpoints.xxl)
      height: 72px
      font-size: 15px
      line-height: 17px
      padding: 0 10px 0 34px
    &:-webkit-autofill,
    &:-webkit-autofill:hover,
    &:-webkit-autofill:focus,
    &:-webkit-autofill:active
      -webkit-box-shadow: 0 0 0px 1000px white inset
      transition: all 5000s ease-in-out 0s
    &::placeholder
      font-family: "Manrope-Regular"
      font-weight: 400
      color: $color-black
    &:-ms-input-placeholder
      font-family: "Manrope-Regular"
      font-weight: 400
      color: $color-black
    &::-ms-input-placeholder
      font-family: "Manrope-Regular"
      font-weight: 400
      color: $color-black
    &.error
      color: $color-error
      &::placeholder
        color: $color-error
      &:-ms-input-placeholder
        color: $color-error
      &::-ms-input-placeholder
        color: $color-error
    &--textarea
      resize: none
      padding: 10px 15px!important
      +above($breakpoints.sm)
        padding: 10px 16px !important
      +above($breakpoints.xxl)
        padding: 17px 24px !important
