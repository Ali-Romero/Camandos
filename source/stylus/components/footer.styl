.footer
  text-align: center
  background: $color-white
  +above($breakpoints.sm)
    text-align: left

  &__row
    padding: 20px 0
    margin: 0 0 0 auto
    +above($breakpoints.sm)
      display: flex
      justify-content: space-between
      align-items: center
    +above($breakpoints.xxl)
      padding: 28px 0

  &__description
    margin: 0 0 10px 0
    +above($breakpoints.sm)
      margin: 0
    br
      display: block
  &__privacy
    text-decoration: underline
    display: block
    margin: 0 0 20px 0
    +above($breakpoints.sm)
      margin: 0

  &__container
    text-align: center
    margin: 0 0 20px 0
    +above($breakpoints.sm)
      margin: 0
      text-align: left
      display: flex
      align-items: center
      justify-content: center

  &__logo
    margin: 0 0 16px 0
    +above($breakpoints.sm)
      margin: 0 20px 0 0
    +above($breakpoints.xxl)
      margin: 0 46px 0 0
    img
      width 150px
      height: auto
      margin: 0 auto
      +above($breakpoints.sm)
        margin: 0
        width 120px
      +above($breakpoints.md)
        width 150px
      +above($breakpoints.xxl)
        width 177px
  &__connection
    max-width: 204px
    margin: 0 auto
    +above($breakpoints.sm)
      max-width: 100%
      margin: 0
    .connection
      justify-content: center